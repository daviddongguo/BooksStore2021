@model BooksStore2021.Domain.Entities.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Title</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:c0}", Model.Price)</span></label> </div>
        </div>
        @if(Model.ImageData != null && Model.ImageMimeType != null)
        {
          <img class="card-img-top img-fluid d-block mx-auto mb-3" style="height:400px" src="@String.Format("data:image/png; base64, {0}", Convert.ToBase64String(Model.ImageData))" alt="Card image cap">
        }

        <div class="card-body p-1 px-3 row">
          @foreach(string categoryStr in Model.Category.Split(' '))
          {
                <div class="col-6">
                <span class="badge p-2 border w-100 text-dark" style="background-color:lavenderblush"><a asp-action="Index" asp-controller="Home" asp-route-category=@categoryStr>@categoryStr</a></span>
                </div>
          }
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
            <div class="col-12 p-1">
                <a asp-action="AddToCart" asp-route-id="@Model.ProductId" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Add to Cart</a>
            </div>
        </div>
    </div>
</div>
